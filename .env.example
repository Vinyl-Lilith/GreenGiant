# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/greenhouse?retryWrites=true&w=majority

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-here-change-me

# JWT Expiry
JWT_EXPIRE=7d

# API Key for Raspberry Pi communication (must match Pi's API_KEY)
PI_API_KEY=your-pi-api-key-here-change-me

# Server Port (Render will override this)
PORT=10000

# Node Environment
NODE_ENV=production

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=https://yourgreenhouse.onrender.com,https://yourfrontend.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Settings
SESSION_TIMEOUT_MINUTES=60
